<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.website.backend.mapper.VerificationCodeMapper">
    
    <resultMap id="BaseResultMap" type="com.website.backend.entity.VerificationCode">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="code" property="code" />
        <result column="expire_time" property="expireTime" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <sql id="Base_Column_List">
        id, username, code, expire_time, create_time, update_time
    </sql>
    
    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM verification_codes
        WHERE username = #{username}
        AND expire_time > NOW()
        ORDER BY create_time DESC
        LIMIT 1
    </select>
    
    <delete id="deleteExpiredCodes">
        DELETE FROM verification_codes
        WHERE expire_time <= NOW()
    </delete>
</mapper>